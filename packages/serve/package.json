{
  "name": "express-ts-server",
  "version": "0.1.0",
  "description": "Mongoose Node.js Express TypeScript application boilerplate.",
  "author": "linjielinlin <993353454@qq.com>",
  "license": "Apache-2.0",
  "keywords": [
    "login",
    "Node",
    "express",
    "typescript",
    "mongoose"
  ],
  "scripts": {
    "tsc": "tsc",
    "build": "rimraf dist && tsc -b && cp .env* dist && cp -rf ./config dist",
    "dev": "cross-env NODE_ENV=development nodemon --config nodemon.json",
    "start": "cross-env NODE_ENV=development ts-node src/server.ts",
    "lint": "eslint",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --verbose",
    "coverage": "cross-env NODE_ENV=test rimraf coverage && jest --coverage --silent --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "config": "^3.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-request-id": "^1.4.1",
    "express-validator": "^6.14.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-request-id": "^1.4.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "jest": "^28.1.1",
    "jest-html-reporters": "^3.0.9",
    "nodemon": "^2.0.18",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1"
  }
}
